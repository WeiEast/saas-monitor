<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:reg="http://www.dangdang.com/schema/ddframe/reg"
       xmlns:job="http://www.dangdang.com/schema/ddframe/job"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.dangdang.com/schema/ddframe/reg
                        http://www.dangdang.com/schema/ddframe/reg/reg.xsd
                        http://www.dangdang.com/schema/ddframe/job
                        http://www.dangdang.com/schema/ddframe/job/job.xsd
                        ">
    <!--配置作业注册中心 -->
    <reg:zookeeper id="regCenter" server-lists="${zk.address}" namespace="monitor-job"
                   base-sleep-time-milliseconds="1000"
                   max-sleep-time-milliseconds="3000" max-retries="3"/>

    <!-- 配置作业-->
    <job:simple id="taskDataFlushJob" class="com.treefinance.saas.monitor.biz.task.TaskDataFlushJob"
                registry-center-ref="regCenter" cron="0 0/10 * * * ?"
                sharding-total-count="1" overwrite="true"/>

    <job:simple id="httpDataFlushJob" class="com.treefinance.saas.monitor.biz.task.HttpDataFlushJob"
                registry-center-ref="regCenter" cron="0 2/10 * * * ?"
                sharding-total-count="1" overwrite="true"/>

    <!--运营商监控-->
    <job:simple id="taskOperatorFlushJob" class="com.treefinance.saas.monitor.biz.task.TaskOperatorDataFlushJob"
                registry-center-ref="regCenter" cron="0 4/5 * * * ?"
                sharding-total-count="1" overwrite="true"/>

    <!--运营商监控,定时预警任务(按任务统计预警)-->
    <job:simple id="operatorMonitorByTaskAlarmJob"
                class="com.treefinance.saas.monitor.biz.task.OperatorMonitorByTaskAlarmJob"
                registry-center-ref="regCenter" cron="0 0 0/1 * * ?"
                sharding-total-count="1" overwrite="true"/>

    <!--运营商监控,定时预警任务(按人数统计预警)-->
    <job:simple id="operatorMonitorByUserAlarmJob"
                class="com.treefinance.saas.monitor.biz.task.OperatorMonitorByTaskAlarmJob"
                registry-center-ref="regCenter" cron="0 0 0/1 * * ?"
    <!--运营商监控,定时预警任务-->
    <!--<job:simple id="taskOperatorAlarmJob" class="com.treefinance.saas.monitor.biz.task.TaskOperatorAlarmJob"-->
                <!--registry-center-ref="regCenter" cron="0 0 0/1 * * ?"-->
                <!--sharding-total-count="1" overwrite="true"/>-->
    <job:simple id="taskOperatorAlarmJob" class="com.treefinance.saas.monitor.biz.task.TaskOperatorAlarmJob"
                registry-center-ref="regCenter" cron="0 0/10 * * * ?"
                sharding-total-count="1" overwrite="true"/>
    <!--
    &lt;!&ndash; 报警任务 &ndash;&gt;
    <job:simple id="alarmJob" class="com.treefinance.saas.monitor.biz.task.AlarmJob" registry-center-ref="regCenter"
                cron="0 1/2 * * * ?"
                sharding-total-count="1" overwrite="true"/>-->
</beans>
